{
  "name": "zurt-backend",
  "version": "1.0.0",
  "description": "Backend API for zurT financial consolidation platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "psql $DATABASE_URL -f schema.sql",
    "db:migrate:admin": "tsx src/db/run-migration.ts",
    "db:migrate:full": "tsx src/db/execute-schema.ts",
    "db:update-plans": "tsx src/db/update-plans.ts",
    "db:test": "tsx src/db/test-connection.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed-institutions": "tsx src/db/seed-institutions.ts",
    "db:migrate:pluggy": "tsx src/db/run-pluggy-migration.ts",
    "db:migrate:card-balance": "tsx src/db/run-card-balance-migration.ts",
    "db:migrate:system-settings": "tsx src/db/run-system-settings-migration.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fintech",
    "open-finance",
    "financial-consolidation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/static": "^7.0.0",
    "axios": "^1.13.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "mercadopago": "^2.12.0",
    "pg": "^8.11.5",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}
